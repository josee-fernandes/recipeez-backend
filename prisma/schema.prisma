generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  recipes Recipe[]
}

model Recipe {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  titleNormalized String
  slug            String   @unique
  description     String
  photo           String?
  ingredients     String[]
  instructions    String
  userId          String   @db.ObjectId
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([titleNormalized], name: "index_title_normalized")
}
